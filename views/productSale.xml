<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.inherited</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="product_warranty"/>
                </xpath>
                 <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="after">
                    <field name="Sale_order_discount_estimated"/>
                </xpath>
                 <xpath expr="//field[@name='order_line']/tree/field[@name='product_warranty']" position="after">
                    <field name="day_under_warranty"/>
                </xpath>
                 <xpath expr="//field[@name ='tax_totals_json']" position="after">
                    <field name="discount_total" widget="monetary"/>
                </xpath>
            </field>
        </record>


</odoo>