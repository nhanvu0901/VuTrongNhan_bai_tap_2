  <record id="test2_product_template_search_view" model="ir.ui.view">
        <field name="name">Test2 Product Search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            <xpath expr="//filter[@name='activities_exception']" position="after">
                <filter string="Code " name="creation_date_filter" domain="['&amp;',
                ('Date_from', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),
                 ('Date_to', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:59:59'))
                ]"/>
            </xpath>
            </data>
        </field>
    </record>


    <record id="action_create_appointments" model="ir.actions.server"> <!--to view the wizard in the action button-->
            <field name="name">Mass Update</field>
            <field name="model_id" ref="test2.model_product_template"/>
            <field name="binding_model_id" ref="test2.model_product_template"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                if record:
                    action_values = env.ref('test2.action_create_product_code').sudo().read()[0]
                    action_values.update({'context': env.context})
                    action = action_values
            </field>
        </record>





    <record id='test2_product_action' model='ir.actions.act_window'><!--khai bao action -->
        <field name="name">Product Form</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="test2.test2_product_template_search_view"/>
    </record>
    <menuitem name="Test2" id="menu_root"/>
     <menuitem name="Product" id="product_root" parent="menu_root" action="test2_product_action"/>

</odoo>