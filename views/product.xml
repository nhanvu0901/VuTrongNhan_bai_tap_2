<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="test2_product_view_form" model="ir.ui.view">
        <field name="name">Product Form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/> <!--External ID cua view form-->
        <field name="arch" type="xml">
            <xpath expr="//field[@name ='barcode']" position="after">
                <field name="product_warranty" groups="test2.group_adavance_sale" />
                <field name="Date_to" groups="test2.group_adavance_sale"/>
                <field name="Date_from" groups="test2.group_adavance_sale"/>
            </xpath>
        </field>
    </record>

    <record id="tes2_product_view_tree" model="ir.ui.view">
        <field name="name">Product List</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name ='standard_price']" position="after">
                 <field name="product_warranty" groups="test2.group_adavance_sale"/>
                 <field name="Date_to" groups="test2.group_adavance_sale"/>
                 <field name="Date_from" groups="test2.group_adavance_sale"/>
            </xpath>
        </field>
    </record>

